<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink2"
    tools:context=".SubMenuActivity">

    <Button
        android:id="@+id/study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Estudiar"
        android:layout_marginTop="10dp"
        android:onClick="studyCards"/>

    <Button
        android:id="@+id/add_card_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="AÃ±adir palabras"
        android:layout_marginTop="10dp"
        android:onClick="addCard"/>

    <Button
        android:id="@+id/del_card_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Eliminar palabras"
        android:layout_marginTop="10dp"
        android:onClick="delCard"/>

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mostrar palabras"
        android:layout_marginTop="10dp"
        android:onClick="showContent"/>

</LinearLayout>
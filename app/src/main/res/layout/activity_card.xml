<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardActivity"
    android:onClick="manageCard">

    <TextView
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="compu 直す"
        android:fontFamily="@font/average"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/front2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15pt"
        android:layout_marginBottom="-15pt"
        android:layout_gravity="center"
        android:fontFamily="@font/handwritten"
        android:gravity="center"
        android:text="compu 直す"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/front_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="hiragana 直す"
        android:fontFamily="@font/average"
        android:textSize="36sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/front_h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15pt"
        android:layout_marginBottom="-15pt"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/handwritten"
        android:textSize="36sp"
        android:text="hiragana　直す"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp"
        android:text="significado"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="restart"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:paddingEnd="50dp"
            android:paddingBottom="20dp"
            android:text="Reiniciar lista"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center|bottom"
            android:gravity="center">

            <Button
                android:id="@+id/correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="updateScore"
                android:text="BIEN"/>

            <Button
                android:id="@+id/almost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:onClick="updateScore"
                android:text="CASI" />

            <Button
                android:id="@+id/incorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:onClick="updateScore"
                android:text="MAL" />

        </LinearLayout>

        <TextView
            android:id="@+id/card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="15dp"
            android:text="10/10"
            android:textSize="20dp" />

    </FrameLayout>

</LinearLayout>